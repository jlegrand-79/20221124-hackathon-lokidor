{% extends 'layout.html.twig' %}

{% block content %}

	<table>
		<tbody>
			<tr>
				{% for destination in destinations %}

			
					<div class="card grid text-center" style="width: 18rem;">
						<img src="..." class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{ destination.name }}</h5>
							<p class="card-text">
								Type d'objet :{{ destination.type }}<br>
								Distance par rapport à la terre :{{ destination.distance }} millions de km<br>
								Température minmale :{{ destination.min_temperature }} °C<br>
								Température maximale :{{ destination.max_temperature }} °C</p>
							<a href="#" class="btn btn-primary">Go somewhere</a>
						</div>
					</div>

				{% endfor %}
				
			</tr>
		</tbody>
	</table>

{% endblock %}
