{% extends 'layout.html.twig' %}
{% block content %}
	<main class="d-flex align-items-center mt-5">
		<div class="container">
			<div class="row justify-content-center">
				<img src="/assets/images/{{ destination.image }}" class="col" alt="Venus" style="width: 300px; margin-left: 20px;">
				<div class="text-left col" style="margin-left: 20px;">
					<h2 class="text-white mt-5">{{ destination.planet_name }}</h2>
					<p class="text-white">
						Description : description à ajouter dans la base{{ destination.description }}<br>
						Type d'astre :
						{{ destination.type }}<br>
						Distance par rapport à la terre :
						{{ destination.distance }}
						millions de km<br>
						Température minimale :
						{{ destination.min_temperature }}
						°C<br>
						Température maximale :
						{{ destination.max_temperature }}
						°C<br>
						<br>

					</p>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
